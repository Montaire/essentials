{
  "compilerOptions": {
    "target": "ESNext",
    "moduleResolution": "node",
    "module": "ESNext",
    "outDir": "dist",
    "sourceMap": true,
    "rootDir": "src",
    "declaration": true,  
    "baseUrl": "./src",
    "paths": {
      "@core": ["./core/index.js"],
      "@core/render": ["./core/render/index.js"],
      "@platform": ["./platform/index.js"]
    }
  },
  "include": ["./src"],
  "exclude": ["./src/oldtrash", "./node_modules"]
}