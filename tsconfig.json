{
  "compilerOptions": {
    "target": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "outDir": "dist",
    "sourceMap": true,
    "rootDir": "src",
    "declaration": true,  
    "baseUrl": "./src",
    //"incremental": true,
    "experimentalDecorators": true,
    "paths": {
      "@fortles/core": ["./core/index.js"],
      "@fortles/core/utility": ["./core/utility/index.js"],
      "@fortles/core/template": ["./core/template/index.js"],
      "@fortles/platform.server": ["./platform/server/index.js"],
      "@fortles/test-utility": ["./test-utility/index.js"],
      "@fortles/model": ["./model/index.js"]
    },
    "plugins": [
      { "transform": "./dst/model/typescript-plugin/TranspilerQueryPlugin.js", "type": "raw" }
    ]
  },
  "include": ["./src", "./src/**/package.json"],
  "exclude": ["./src/oldtrash", "./node_modules"]
}