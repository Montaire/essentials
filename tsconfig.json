{
  "compilerOptions": {
    "target": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "outDir": "dist",
    "sourceMap": true,
    "rootDir": "src",
    "declaration": true,  
    "baseUrl": "./src",
    "incremental": true,
    "paths": {
      "@essentials-framework/core": ["./core/index.js"],
      "@essentials-framework/platform.server": ["./platform/server/index.js"]
    }
  },
  "include": ["./src", "./src/**/package.json"],
  "exclude": ["./src/oldtrash", "./node_modules"]
}