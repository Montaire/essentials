{
  "compilerOptions": {
    "target": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "outDir": "dist",
    "sourceMap": true,
    "rootDir": "src",
    "declaration": true,  
    "baseUrl": "./src",
    //"incremental": true,
    "experimentalDecorators": true,
    "plugins": [
      { "transform": "./dst/model/typescript-plugin/TranspilerQueryPlugin.js", "type": "raw" }
    ]
  },
  "include": ["./src", "./src/**/package.json"],
  "exclude": ["./src/oldtrash", "./node_modules", "./dist"]
}